---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import Navbar from "../components/Navbar.jsx";

const { title = "e-Books" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/e-book/faviconbook.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Plataforma moderna para compartir y descubrir libros electrÃ³nicos." />
		<ClientRouter />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="antialiased selection:bg-pink-500 selection:text-white">
		<Navbar client:load />
		<div class="pt-20">
			<div class="fixed inset-0 -z-10 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-900 via-[#0f172a] to-black"></div>
			
			<div class="relative min-h-screen flex flex-col">
				<main class="flex-grow container mx-auto px-4 py-8">
					<slot />
				</main>

				<footer class="mt-auto py-6 border-t border-white/10 glass-panel">
					<div class="container mx-auto px-4 text-center text-gray-400">
						<p>&copy; {new Date().getFullYear()} e-Books. Todos los derechos reservados. v1.1</p>
					</div>
				</footer>
			</div>
		</div>
	</body>
</html>
